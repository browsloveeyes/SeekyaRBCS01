<Window x:Class="Seekya.ApplyFormsDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Seekya"
        mc:Ignorable="d"
        Title="ApplyFormsDetails" Height="450" Width="800" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label Content="患者申请单详情" HorizontalAlignment="Left" Margin="330,20,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
        </Grid>
        <Grid Grid.Row="1">
            <WindowsFormsHost HorizontalAlignment="Left" Height="300" Margin="0,0,0,0" VerticalAlignment="Top" Width="793"/>
            <DataGrid x:Name="datagrid" HorizontalAlignment="Left"  Margin="0,0,0,0" VerticalAlignment="Top" Height="300" Width="793"/>
            

        </Grid>
        <Grid Grid.Row="2">
            <Button Content="选择申请单" HorizontalAlignment="Left" Margin="350,20,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>
